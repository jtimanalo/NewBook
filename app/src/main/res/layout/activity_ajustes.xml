<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_ajustes">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0E0E0E"
        tools:context=".activity_ajustes">

        <ImageButton
            android:id="@+id/ajustes2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:src="@android:drawable/ic_menu_preferences"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.917"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.952" />

        <ImageButton
            android:id="@+id/biblioteca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:src="@android:drawable/ic_menu_save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.628"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.952" />

        <ImageButton
            android:id="@+id/btnQuiz2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Quiz"
            android:src="@android:drawable/ic_menu_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.343"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.952" />

        <ImageButton
            android:id="@+id/btnlibros2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:onClick="Libros"
            android:src="@android:drawable/ic_menu_revert"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.003"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.954" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="157dp"
            android:layout_height="57dp"
            android:text="Ajustes"
            android:textColor="#F6EBEB"
            android:textSize="46sp"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="21dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="69dp"
            android:layout_height="66dp"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/ic_baseline_perm_identity_24"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="112dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="62dp"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/ic_baseline_help_outline_24"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="240dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="79dp"
            android:layout_height="37dp"
            android:text="Perfil"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="125dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="77dp"
            android:layout_height="35dp"
            android:text="Ayuda"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="248dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/btnlibros2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:onClick="Libros"
        android:src="@android:drawable/ic_menu_revert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="157dp"
        android:layout_height="57dp"
        android:text="Ajustes"
        android:textSize="46sp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="21dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="69dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/ic_baseline_perm_identity_24"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="112dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="62dp"
        app:srcCompat="@drawable/ic_baseline_help_outline_24"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="240dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="79dp"
        android:layout_height="37dp"
        android:text="Perfil"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="125dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="77dp"
        android:layout_height="35dp"
        android:text="Ayuda"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="248dp" />
</androidx.constraintlayout.widget.ConstraintLayout>